%h1 Edit Product Backlog Item
= error_messages_for :product_backlog_item
- remote_form_for(:product_backlog_item, :url => product_backlog_item_path(sprint, project), :method => :put) do |f|
  = render :partial => "shared/form", :locals => { :f => f }
  = submit_tag 'Update'
  = button_to_close_redbox 'Cancel'