<h1>New project</h1>

<%= error_messages_for :project %>

<% form_for(:project, :url => projects_path) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Position</b><br />
    <%= f.text_field :position %>
  </p>

  <p>
    <b>Sprint</b><br />
    <%= f.text_field :sprint_id %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', projects_path %>